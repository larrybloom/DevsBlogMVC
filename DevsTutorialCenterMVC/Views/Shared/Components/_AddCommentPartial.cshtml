@model AddCommentVM;

<div class="mt-3">
    <form method="post" asp-action="AddComment" asp-controller="Articles" asp-route-articleId="@ViewBag.ArticleId">
        <div class="mb-2">
            <label class="mb-2 block text-sm text-gray-900">Type Comment</label>
            <textarea class="input" asp-for="@Model.Text" placeholder="Write Here" rows="10"></textarea>
        </div>
        <div class="mt-3">
            <button class="button" type="submit">Post Comment</button>
        </div>
    </form>
</div>